@using MyCommune.Models.ViewModel.User;
@model MyCommune.Models.ViewModel.User.UserDetailViewModel

<div class="card">
    <form asp-controller="User" asp-action="UpdateUser">
        <div class="card-header">
            <span class="fs-4 fw-semibold">User</span>
        </div>
        <div class="card-body">
            <div class="mb-3 row">
                <label asp-for="@Model.Id" class=" col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input readonly class="form-control-plaintext" asp-for="@Model.Id">
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="@Model.FirstName" class=" col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="@Model.FirstName">
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="@Model.LastName" class=" col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="@Model.LastName">
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="@Model.Email" class=" col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="@Model.Email">
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="@Model.Mobile" class=" col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="@Model.Mobile">
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="@Model.Address" class=" col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea class="form-control" rows="3" asp-for="@Model.Address"></textarea>
                </div>
            </div>
            <input asp-for="@Model.UserDetailId" class="red" />
            <div class="col-12">
                <button type="submit" class="btn btn-primary btn-sm float-end">Submit</button>
                <a asp-controller="User" asp-action="Index" class="btn btn-primary btn-sm float-start">Cancel</a>
            </div>
        </div>

        @* <div class="card-footer">

        </div>*@
    </form>
    <div asp-validation-summary="All"></div>
</div>